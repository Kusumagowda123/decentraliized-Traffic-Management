<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/colorPrimary"
        android:text="Welcome" />


    <Button
        android:id="@+id/btnLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Update Location"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnUpdateService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Select Service"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRemoveService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Remove Service"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnUpdateInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Update Data"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAskHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Ask for Help"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCheckRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Check Rewards"
        android:textAlignment="center"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/colorPrimary"
        android:text="" />
</LinearLayout>
